<script is:inline>
// Movemos la lógica a una función que podemos llamar cuando sea necesario
function setupNavbar() {
    const navbar = document.getElementById('main-navbar');
    if (navbar) {
        let lastScroll = 0;
        const scrollThreshold = 200;
        
        window.addEventListener('scroll', () => {
            const currentScroll = window.pageYOffset;
            
            if (currentScroll <= scrollThreshold) {
                navbar.classList.add('-translate-y-full', 'opacity-0');
                navbar.classList.remove('translate-y-0', 'opacity-100', 'shadow-md');
            } else if (currentScroll > lastScroll && currentScroll > scrollThreshold) {
                navbar.classList.remove('-translate-y-full', 'opacity-0');
                navbar.classList.add('translate-y-0', 'opacity-100', 'shadow-md');
            }
            
            lastScroll = currentScroll;
        });
    }

    // Control del sidebar móvil
    const menuButton = document.getElementById('menuButton');
    const closeButton = document.getElementById('closeSidebar');
    const mobileSidebar = document.getElementById('mobileSidebar');
    const sidebarBackdrop = document.getElementById('sidebarBackdrop');
    const sidebarContent = document.getElementById('sidebar');

    let isSidebarOpen = false;

    function openSidebar() {
        if (isSidebarOpen) return;
        isSidebarOpen = true;
        mobileSidebar.classList.remove('hidden');
        setTimeout(() => {
            sidebarContent.classList.remove('translate-x-full');
        }, 10);
    }

    function closeSidebar() {
        if (!isSidebarOpen) return;
        isSidebarOpen = false;
        sidebarContent.classList.add('translate-x-full');
        setTimeout(() => {
            mobileSidebar.classList.add('hidden');
        }, 300);
    }

    // Remover listeners antiguos primero para evitar duplicados
    menuButton?.removeEventListener('click', openSidebar);
    closeButton?.removeEventListener('click', closeSidebar);
    sidebarBackdrop?.removeEventListener('click', closeSidebar);

    // Agregar nuevos listeners
    menuButton?.addEventListener('click', openSidebar);
    closeButton?.addEventListener('click', closeSidebar);
    sidebarBackdrop?.addEventListener('click', closeSidebar);

    // Cerrar con tecla Escape
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && isSidebarOpen) {
            closeSidebar();
        }
    });
}

// Ejecutar al cargar la página
document.addEventListener('DOMContentLoaded', setupNavbar);

// Astro View Transitions API (si estás usando transiciones entre páginas)
document.addEventListener('astro:after-swap', setupNavbar);
</script>

<style>
    nav {
        position: fixed;
        top: 0;
